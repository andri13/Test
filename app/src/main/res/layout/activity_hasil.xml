<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.andri.iak.Hasil">

    <TextView
        android:id="@+id/res_tengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:text="........" />

    <TextView
        android:id="@+id/res_atas"
        android:layout_above="@id/res_tengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:text="Score Anda"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tvSkorAkhir"
        android:layout_below="@+id/res_tengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:text="sekian"
        android:textSize="30sp"
        />

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_margin="10sp"
        android:padding="10sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXit"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
